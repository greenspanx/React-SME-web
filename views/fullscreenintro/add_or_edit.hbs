<style>
table {
  table-layout: fixed;
}

textarea:focus {
  background-color: lightblue;
}

ul, #myUL {
  list-style-type: none;
}

#myUL {
  margin: 0;
  padding: 0;
}

.caret {
  cursor: pointer;
  -webkit-user-select: none; /* Safari 3.1+ */
  -moz-user-select: none; /* Firefox 2+ */
  -ms-user-select: none; /* IE 10+ */
  user-select: none;
}

.caret::before {
  content: "\25B6";
  color: black;
  display: inline-block;
  margin-right: 6px;
}

.caret-down::before {
  -ms-transform: rotate(90deg); /* IE 9 */
  -webkit-transform: rotate(90deg); /* Safari */'
  transform: rotate(90deg);
}

.nested {
  display: none;
}

.active {
  display: block;
}
</style>
<div class="">
  <div class="container align-center">
    <nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-end">
      <a class="navbar-brand" href="#">{{title}}</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" > {{username}} </a>
          <a class="nav-item nav-link" > {{email}} </a>
          <a class="nav-item nav-link" href="/admin/logout">logout</a>
        </div>
      </div>
    </nav>
  </div>
  <div class="container align-center">
    <div class="container">
      <div class="row">
        <div class="col">
          <a href="/admin/navbaritems/list">Navbar</a> 
        </div>
        <div class="col">Full screen intro</div>
        <div class="col">col</div>
        <div class="col">col</div>
      </div>
      <div class="row">
        <div class="col">col</div>
        <div class="col">col</div>
        <div class="col">col</div>
        <div class="col">col</div>
      </div>
    </div>
  </div>
  <div class="container align-center">
    <div class="" style="text-align: center; margin-top: 20px;">
      <span style="font-size: 14; color: red; text-align: center;">{{errors}}</span>
    </div>
    <form class="mbr-form form-serialize" id="fullscreenintro" action="/admin/fullscreenintro" method="POST" autocomplete="off">
      <input type="hidden" name="_id" value="{{fullscreenintro._id}}">
      <div class="form-group" style="text-align: left;">
        <label class="form-control-label mbr-fonts-style display-7" >Full screen intro title</label>
        <input type="text" class="form-control" name="title" placeholder="title" value="{{fullscreenintro.title}}"/>
        <div class="text-danger">
          {{fullscreenintro.title_error}}
        </div>
      </div>
      <div class="form-group" style="text-align: left;">
        <label class="form-control-label mbr-fonts-style display-7">Full screen intro content</label>
        <textarea type="text" form ="fullscreenintro"
          rows="6" wrap="soft" class="form-control"
          name="content" placeholder="content"
        >
          {{fullscreenintro.content}}
        </textarea>
        <div class="text-danger">
          {{fullscreenintro.content_error}}
        </div>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/admin/fullscreenintro/list"><i class="fa fa-list-alt"></i> View All</a>
      </div>
    </form>
  </div>
</div>
